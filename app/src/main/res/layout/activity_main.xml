<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#414141"
        android:layout_weight="1"
        android:text=""
        android:paddingTop="30dp"
        android:textColor="#919191"
        android:gravity="bottom"
        android:padding="10dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="19sp"
        android:autoSizeStepGranularity="2sp"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat">

    </TextView>
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#313131"
        android:gravity="bottom"
        android:text=""
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeStepGranularity="2sp"
        android:maxLines="1"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textAlignment="viewEnd"
        tools:ignore="RtlCompat">

    </TextView>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#313131"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        android:textSize="30sp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bbrac1"
                        android:text="("
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bbrac2"
                        android:text=")"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsin"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/btan"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bfact"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bsquare"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:textColor="#ff7101"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bsqrt"
                        android:text="√"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bdiv"
                        android:text="÷"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bmul"
                        android:text="×"
                        android:layout_weight="1"
                        android:textColor="#ff7101"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bminus"
                        android:text="-"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_margin="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bplus"
                        android:text="+"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bmod"
                        android:text="%"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bdot"
                        android:text="."
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                    <Button
                        android:id="@+id/bequal"
                        android:text="="
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#ff7101"
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>